# PFMT Integrated Dual-Wizard Application - Frontend Environment Configuration

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=PFMT Integrated
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=Professional Financial Management Tool - Integrated Dual-Wizard System
VITE_APP_AUTHOR=Manus AI Development Team

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
VITE_JWT_STORAGE_KEY=pfmt_integrated_auth_token
VITE_REFRESH_TOKEN_KEY=pfmt_integrated_refresh_token
VITE_USER_STORAGE_KEY=pfmt_integrated_user_data
VITE_TOKEN_REFRESH_THRESHOLD=300000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
VITE_DEBUG=true
VITE_LOG_LEVEL=debug
VITE_ENABLE_DEVTOOLS=true
VITE_MOCK_API=false

# =============================================================================
# FEATURE FLAGS - DUAL WIZARD SYSTEM
# =============================================================================
VITE_FEATURE_DUAL_WIZARD=true
VITE_FEATURE_LEGACY_WIZARD=true
VITE_FEATURE_WORKFLOW_SYSTEM=true
VITE_FEATURE_ADVANCED_REPORTING=true
VITE_FEATURE_REAL_TIME_UPDATES=true
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_NOTIFICATIONS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
VITE_THEME=default
VITE_PRIMARY_COLOR=#007bff
VITE_SECONDARY_COLOR=#6c757d
VITE_SUCCESS_COLOR=#28a745
VITE_WARNING_COLOR=#ffc107
VITE_ERROR_COLOR=#dc3545

# =============================================================================
# DUAL WIZARD CONFIGURATION
# =============================================================================
VITE_WIZARD_AUTO_SAVE_INTERVAL=30000
VITE_WIZARD_SESSION_TIMEOUT=3600000
VITE_WIZARD_MAX_STEPS=10
VITE_WIZARD_ENABLE_PROGRESS_BAR=true
VITE_WIZARD_ENABLE_PERSISTENCE=true
VITE_WIZARD_ENABLE_SUBSTEPS=true

# =============================================================================
# WORKFLOW SYSTEM CONFIGURATION
# =============================================================================
VITE_WORKFLOW_ENABLED=true
VITE_WORKFLOW_AUTO_FINALIZE=true
VITE_WORKFLOW_NOTIFICATION_ENABLED=true
VITE_WORKFLOW_STATUS_POLLING_INTERVAL=5000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_WARNING_LIMIT=500
VITE_CACHE_DURATION=300000
VITE_DEBOUNCE_DELAY=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
VITE_ENABLE_CSP=true
VITE_SECURE_STORAGE=true
VITE_ENABLE_AUDIT_LOGGING=true
VITE_SESSION_STORAGE_PREFIX=pfmt_integrated_

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
VITE_NOTIFICATION_DURATION=5000
VITE_NOTIFICATION_POSITION=top-right
VITE_ENABLE_SOUND_NOTIFICATIONS=false
VITE_ENABLE_BROWSER_NOTIFICATIONS=true

# =============================================================================
# ERROR REPORTING
# =============================================================================
VITE_ENABLE_ERROR_REPORTING=false
VITE_ERROR_REPORTING_ENVIRONMENT=development

# =============================================================================
# LOCALIZATION CONFIGURATION
# =============================================================================
VITE_DEFAULT_LOCALE=en
VITE_FALLBACK_LOCALE=en
VITE_SUPPORTED_LOCALES=en,fr
VITE_ENABLE_I18N=false

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,txt,jpg,jpeg,png,gif
VITE_UPLOAD_CHUNK_SIZE=1048576

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ACCESSIBILITY_CHECKS=true
VITE_ENABLE_BUNDLE_ANALYZER=false

# =============================================================================
# BRANDING CONFIGURATION
# =============================================================================
VITE_COMPANY_NAME=Government of Alberta
VITE_COMPANY_LOGO=/assets/logo.png
VITE_FAVICON=/assets/favicon.ico
VITE_SUPPORT_EMAIL=pfmt.support@gov.ab.ca
VITE_SUPPORT_PHONE=+1-780-555-0123

# =============================================================================
# LEGAL CONFIGURATION
# =============================================================================
VITE_PRIVACY_POLICY_URL=/privacy-policy
VITE_TERMS_OF_SERVICE_URL=/terms-of-service
VITE_COPYRIGHT_YEAR=2025
VITE_LICENSE=Government of Alberta

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
VITE_TEST_USER_EMAIL=test@gov.ab.ca
VITE_TEST_USER_PASSWORD=testpassword123
VITE_ENABLE_TEST_UTILITIES=true
VITE_MOCK_DELAY=500

