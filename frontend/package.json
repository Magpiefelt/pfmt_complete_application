{
  "name": "pfmt-integrated-frontend",
  "version": "1.0.0",
  "description": "Integrated PFMT frontend combining enhanced UI with PostgreSQL backend",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "type-check": "vue-tsc --noEmit --skipLibCheck",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@vueuse/core": "^10.5.0",
    "axios": "^1.6.0",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.536.0",
    "pinia": "^2.1.7",
    "tailwind-merge": "^3.3.1",
    "vee-validate": "^4.11.8",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "vue-toastification": "^2.0.0-rc.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.5.1",
    "@tsconfig/node18": "^18.2.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^18.18.8",
    "@vitejs/plugin-vue": "^4.4.1",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.52.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.5.6",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "typescript": "~5.2.2",
    "vite": "^4.5.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^1.8.22"
  }
}
