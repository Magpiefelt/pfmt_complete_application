# PFMT Enhanced Application - Frontend Environment Configuration
# Copy this file to .env.local and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
VUE_APP_API_BASE_URL=http://localhost:3000/api
VUE_APP_API_TIMEOUT=30000
VUE_APP_API_RETRY_ATTEMPTS=3
VUE_APP_API_RETRY_DELAY=1000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VUE_APP_NAME=PFMT Enhanced
VUE_APP_VERSION=2.0.0
VUE_APP_DESCRIPTION=Professional Financial Management Tool
VUE_APP_AUTHOR=Manus AI Development Team

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
VUE_APP_JWT_STORAGE_KEY=pfmt_auth_token
VUE_APP_REFRESH_TOKEN_KEY=pfmt_refresh_token
VUE_APP_USER_STORAGE_KEY=pfmt_user_data
VUE_APP_TOKEN_REFRESH_THRESHOLD=300000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
VUE_APP_DEBUG=true
VUE_APP_LOG_LEVEL=debug
VUE_APP_ENABLE_DEVTOOLS=true
VUE_APP_MOCK_API=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VUE_APP_FEATURE_DUAL_WIZARD=true
VUE_APP_FEATURE_LEGACY_WIZARD=true
VUE_APP_FEATURE_ADVANCED_REPORTING=true
VUE_APP_FEATURE_REAL_TIME_UPDATES=true
VUE_APP_FEATURE_DARK_MODE=true
VUE_APP_FEATURE_NOTIFICATIONS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
VUE_APP_THEME=default
VUE_APP_PRIMARY_COLOR=#007bff
VUE_APP_SECONDARY_COLOR=#6c757d
VUE_APP_SUCCESS_COLOR=#28a745
VUE_APP_WARNING_COLOR=#ffc107
VUE_APP_ERROR_COLOR=#dc3545

# =============================================================================
# WIZARD CONFIGURATION
# =============================================================================
VUE_APP_WIZARD_AUTO_SAVE_INTERVAL=30000
VUE_APP_WIZARD_SESSION_TIMEOUT=3600000
VUE_APP_WIZARD_MAX_STEPS=10
VUE_APP_WIZARD_ENABLE_PROGRESS_BAR=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
VUE_APP_ENABLE_LAZY_LOADING=true
VUE_APP_CHUNK_SIZE_WARNING_LIMIT=500
VUE_APP_CACHE_DURATION=300000
VUE_APP_DEBOUNCE_DELAY=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
VUE_APP_ENABLE_CSP=true
VUE_APP_SECURE_STORAGE=true
VUE_APP_ENABLE_AUDIT_LOGGING=true
VUE_APP_SESSION_STORAGE_PREFIX=pfmt_

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
VUE_APP_NOTIFICATION_DURATION=5000
VUE_APP_NOTIFICATION_POSITION=top-right
VUE_APP_ENABLE_SOUND_NOTIFICATIONS=false
VUE_APP_ENABLE_BROWSER_NOTIFICATIONS=true

# =============================================================================
# ANALYTICS CONFIGURATION (Optional)
# =============================================================================
VUE_APP_GOOGLE_ANALYTICS_ID=
VUE_APP_ENABLE_ANALYTICS=false
VUE_APP_ANALYTICS_DEBUG=false

# =============================================================================
# ERROR REPORTING (Optional)
# =============================================================================
VUE_APP_SENTRY_DSN=
VUE_APP_ENABLE_ERROR_REPORTING=false
VUE_APP_ERROR_REPORTING_ENVIRONMENT=development

# =============================================================================
# LOCALIZATION CONFIGURATION
# =============================================================================
VUE_APP_DEFAULT_LOCALE=en
VUE_APP_FALLBACK_LOCALE=en
VUE_APP_SUPPORTED_LOCALES=en,fr,es
VUE_APP_ENABLE_I18N=false

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
VUE_APP_MAX_FILE_SIZE=10485760
VUE_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,txt,jpg,jpeg,png,gif
VUE_APP_UPLOAD_CHUNK_SIZE=1048576

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
VUE_APP_ENABLE_MOCK_DATA=false
VUE_APP_ENABLE_PERFORMANCE_MONITORING=true
VUE_APP_ENABLE_ACCESSIBILITY_CHECKS=true
VUE_APP_ENABLE_BUNDLE_ANALYZER=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production deployment
# VUE_APP_API_BASE_URL=https://api.your-production-domain.com/api
# VUE_APP_DEBUG=false
# VUE_APP_LOG_LEVEL=error
# VUE_APP_ENABLE_DEVTOOLS=false
# VUE_APP_MOCK_API=false
# VUE_APP_ENABLE_ANALYTICS=true
# VUE_APP_ENABLE_ERROR_REPORTING=true
# VUE_APP_ERROR_REPORTING_ENVIRONMENT=production

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
VUE_APP_TEST_USER_EMAIL=test@pfmt-enhanced.com
VUE_APP_TEST_USER_PASSWORD=testpassword123
VUE_APP_ENABLE_TEST_UTILITIES=true
VUE_APP_MOCK_DELAY=500

# =============================================================================
# BRANDING CONFIGURATION
# =============================================================================
VUE_APP_COMPANY_NAME=Your Company Name
VUE_APP_COMPANY_LOGO=/assets/logo.png
VUE_APP_FAVICON=/assets/favicon.ico
VUE_APP_SUPPORT_EMAIL=support@your-company.com
VUE_APP_SUPPORT_PHONE=+1-555-0123

# =============================================================================
# SOCIAL MEDIA CONFIGURATION
# =============================================================================
VUE_APP_TWITTER_HANDLE=@yourcompany
VUE_APP_LINKEDIN_URL=https://linkedin.com/company/yourcompany
VUE_APP_GITHUB_URL=https://github.com/yourcompany/pfmt-enhanced

# =============================================================================
# LEGAL CONFIGURATION
# =============================================================================
VUE_APP_PRIVACY_POLICY_URL=/privacy-policy
VUE_APP_TERMS_OF_SERVICE_URL=/terms-of-service
VUE_APP_COPYRIGHT_YEAR=2025
VUE_APP_LICENSE=MIT

