# PFMT Application Environment Configuration
# Copy this file to .env and customize for your deployment

# ---- Application Configuration ----
NODE_ENV=development
PORT=3000

# ---- Security Configuration ----
# IMPORTANT: Change these secrets in production!
JWT_SECRET=pfmt_jwt_secret_change_in_production_min_32_chars
SESSION_SECRET=pfmt_session_secret_change_in_production

# ---- CORS Configuration ----
# Frontend URL for CORS (development)
CORS_ORIGIN=http://localhost:5173

# ---- Frontend Configuration ----
# API base URL for frontend
VITE_API_BASE_URL=http://localhost:3000/api
VITE_APP_TITLE=PFMT Integrated
VITE_APP_VERSION=1.0.0
VITE_DEV_MODE=true

# ---- Database Configuration ----
# PostgreSQL credentials
POSTGRES_USER=pfmt
POSTGRES_PASSWORD=pfmt_secure_password_change_me
POSTGRES_DB=pfmt

# Database connection for backend
DB_HOST=db
DB_PORT=5432
DB_NAME=pfmt
DB_USER=pfmt
DB_PASSWORD=pfmt_secure_password_change_me

# ---- File Upload Configuration ----
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# ---- Logging Configuration ----
LOG_LEVEL=debug

# ---- pgAdmin Configuration (Development Only) ----
PGADMIN_DEFAULT_EMAIL=admin@pfmt.local
PGADMIN_DEFAULT_PASSWORD=admin123

# ---- Production Overrides ----
# Uncomment and modify these for production deployment

# NODE_ENV=production
# LOG_LEVEL=warn
# CORS_ORIGIN=https://your-domain.com
# VITE_API_BASE_URL=https://your-api-domain.com/api
# VITE_DEV_MODE=false

# ---- Optional: External Database ----
# Uncomment to use external PostgreSQL instead of Docker container
# DB_HOST=your-external-db-host.com
# DB_PORT=5432

# ---- Optional: Email Configuration ----
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ---- Optional: Cloud Storage ----
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-west-2
# AWS_S3_BUCKET=your-s3-bucket

